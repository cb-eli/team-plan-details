    <script>
        function toggleCard(headerElement) {
            const card = headerElement.closest('.plan-card');
            const icon = headerElement.querySelector('svg');
            
            card.classList.toggle('open');
            icon.classList.toggle('rotate-180');
        }

        // Open the first plan card by default
        document.addEventListener('DOMContentLoaded', () => {
            const firstPlanCard = document.querySelector('.plan-card');
            if (firstPlanCard) {
                // We don't open the promo banner, so we target the first "real" card
                const firstCollapsibleCard = document.querySelectorAll('.plan-card')[0];
                 if(firstCollapsibleCard) {
                    firstCollapsibleCard.classList.add('open');
                    firstCollapsibleCard.querySelector('svg').classList.add('rotate-180');
                 }
            }
        });
    </script>

